{% extends 'base.html.twig' %}


{% block body %}
    <!-- Navbar -->
    <header class="app-header"><a class="app-header__logo" href="#">Procost</a>
        <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <li class="app-search">
                <a href="login" class="btn btn-info">Se déconnecter</a>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div class="app-sidebar__user">
            <img class="app-sidebar__user-avatar" src="img/user.jpg" alt="User Image">
            <div>
                <p class="app-sidebar__user-name">John Doe</p>
                <p class="app-sidebar__user-designation">Manager</p>
            </div>
        </div>
        <ul class="app-menu">
            <li>
                <a class="app-menu__item {{ current_route is same as 'main_dashboard' ? 'active' }}" href="{{ path('main_dashboard') }}">
                    <i class="app-menu__icon fa fa-dashboard"></i>
                    <span class="app-menu__label">Tableau de bord</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item {{ current_route is same as 'list_projects' ? 'active' }}" href="{{ path('list_projects') }}">
                    <i class="app-menu__icon fa fa-laptop"></i>
                    <span class="app-menu__label">Projets</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item {{ current_route is same as 'list_workers' ? 'active' }}" href="{{ path('list_workers') }}">
                    <i class="app-menu__icon fa fa-users"></i>
                    <span class="app-menu__label">Employés</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item {{ current_route is same as 'list_jobs' ? 'active' }}" href="{{ path('list_jobs') }}">
                    <i class="app-menu__icon fa fa-book"></i>
                    <span class="app-menu__label">Métiers</span>
                </a>
            </li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="app-content">
        {% block main %}
        {% endblock %}
        <footer class="main-footer">
            &copy; 2019 - PROCOST
        </footer>
    </div>

{% endblock %}