{% extends 'layout.html.twig' %}

{% block main %}
        {{ form_start(form) }}

            <div class="form-group">
            {{ form_errors(form.name) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control' , 'placeholder': form.name.vars.label} }) }}
            </div>
            
            <div class="form-group">
            {{ form_errors(form.email) }}
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control' , 'placeholder': form.email.vars.label} }) }}
            </div> 

            <div class="form-group">
            {{ form_errors(form.dailycost) }}
            {{ form_label(form.dailycost) }}
            {{ form_widget(form.dailycost, { 'attr': {'class': 'form-control' , 'placeholder': form.dailycost.vars.label} }) }}
            </div>

            <button type="submit" class="btn btn-info">Ajouter</button>

        {{ form_end(form) }}
{% endblock %}