{% extends 'layout.html.twig' %}

{% block title %}Métiers - PROCOST{% endblock %}

{% block main %}
    
    
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Métiers</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('main_dashboard')}}"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">Métiers</li>
        </ul>
    </div>
    <div class="tile pb-5">
        <a href="{{ path('new_jobs')}}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un Métier</a>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nom du Métier</th>
                        <th>Date d'ajout</th>
                        <th>Nombre d'employés</th>
                    </tr>
                </thead>
                <tbody>
                {% for job in jobs %}
                    <tr>
                        <td>{{ job.name }}</td>
                        <td>{{ job.createdAt|date("m/d/Y") }}</td>
                        <td>{{ job.workers|length }}</td>
                        <td>
                            <a href="{{ path('show_job', { 'id': job.id }) }}" class="btn btn-primary btn-sm">
                                <i class="fa fa-eye mr-0"></i>
                            </a>
                            <a href="{{ path('jobs_edit', { 'id': job.id }) }}" class="btn btn-info btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                            </a>
                        </td>
                    </tr> 
                {% endfor %}
                    
                </tbody>
            </table>
        </div>
        <hr/>
        <nav class="float-right">
            <ul class="pagination">
                <li class="page-item disabled">
                    <span class="page-link">&laquo;</span>
                </li>
                <li class="page-item active" aria-current="page">
                    <span class="page-link">1<span class="sr-only">(current)</span></span>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a></li>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}