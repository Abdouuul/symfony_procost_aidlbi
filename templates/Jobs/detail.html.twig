{% extends 'layout.html.twig' %}

{% block title %}Suivi d'un Job - PROCOST{% endblock %}

{% block main %}
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Suivi de {{ job.name }}</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('main_dashboard') }}"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('list_jobs') }}">Jobs</a>
            </li>
            <li class="breadcrumb-item">Suivi de {{ job.name }}</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="tile">
                <table class="table table-striped table-bordered table-sm">
                    <tbody>
                        <tr>
                            <th>Métier</td>
                            <td>{{ job.name }}</td>
                        </tr>
                        <tr>
                            <th>Nombre d'Employés</td>
                            <td>{{ job.workers|length }}</td>
                        </tr>
                        <tr>
                            <th>Crée le </td>
                            <td>{{ job.createdAt|date("d / m / y") }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="form.html" class="btn btn-info">
                    <i class="fa fa-pencil"></i>Modifier
                </a>
            </div>
        </div>
        <div class="col-md-8">
            <div class="tile pb-5">
                <h3 class="tile-title">Historique des temps de production</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Prénom Nom</th>
                                <th>Email</th>
                                <th>Date d'embauche</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for worker in job.workers %}
                            <tr>
                                <td>{{ worker.firstName ~ ' ' ~ worker.lastName }}</td>
                                <td>{{ worker.email }}</td>
                                <td>{{ worker.employedAt|date("F Y") }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr/>
                <nav class="float-right">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <span class="page-link">&laquo;</span>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">1<span class="sr-only">(current)</span></span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a></li>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">&raquo;</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
